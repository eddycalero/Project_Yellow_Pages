<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - YellowPages  </title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/YellowPages.styles.css" asp-append-version="true" />
	<style>
		
		.margin-border{border-radius:12px;}
				/* navbar */
		.navbar-default {
			background-color: black;
			border-color: black;
			color: white;
		}
	</style>
</head>
<body>
	<heade>

		<nav class=" navbar-default navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
			<div class=" container-fluid">
				<a class="navbar-brand" style="color:white;" asp-area="" asp-controller="Home" asp-action="Index">YellowPages</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav mx-auto">
						<li class="nav-item">
							<a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
						</li>

						<li style="margin-left: 30px;" class="from-row">
							<form>
								<ul class="navbar-nav mx-auto">
									<li class="nav-item">
										<input class="form-control mr-sm-2 margin-border" type="search" placeholder="Que buscas?">
									</li>
									<li class="nav-item">
										<input style="margin-left: 10px;" class="form-control mr-sm-2 margin-border" type="search" placeholder="Donde?">
									</li>
									<li class="nav-item">
										<button style="margin-left: 20px;" class=" btn btn-warning margin-border" type="submit">Search</button>
									</li>
								</ul>
							</form>
						</li>
					</ul>
					<partial name="_LoginPartial" />
				</div>
			</div>
		</nav>
	</heade>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2022 - YellowPages - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
