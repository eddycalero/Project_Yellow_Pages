@model IEnumerable<YellowPages.Entities.OfertaEmpresa>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreOferta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empresa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreOferta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empresa.EmpresaId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OfertaEmpresaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OfertaEmpresaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OfertaEmpresaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
